<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/botao_relatorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_relatorios" />

    <Button
        android:id="@+id/botao_registrar_atividades"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="@string/botao_registrar_atividades" />

    <Button
        android:id="@+id/botao_sobre"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="@string/botao_sobre" />

</LinearLayout>